datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  sku         String   @unique
  stock       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}